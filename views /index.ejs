<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Renkli Top Sayacı</title>
    <style>
        @keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-20px); } }
        .top { animation: bounce 2s infinite ease-in-out; cursor: pointer; }
    </style>
</head>
<body class="bg-gray-950 text-white min-h-screen flex flex-col items-center justify-center p-5">
    
    <div class="text-center mb-10">
        <h1 class="text-gray-500 uppercase tracking-tighter text-sm mb-2">Toplam Tıklama</h1>
        <div class="text-7xl font-black"><%= data.counter %></div>
    </div>

    <form action="/tikla" method="POST" class="mb-10">
        <button type="submit" class="top w-32 h-32 rounded-full shadow-2xl transition-colors duration-500" 
                style="background-color: <%= data.color %>; box-shadow: 0 0 40px <%= data.color %>;">
        </button>
    </form>

    <div class="w-full max-w-md bg-gray-900 p-6 rounded-3xl border border-gray-800">
        <form action="/kaydet" method="POST" class="flex gap-2 mb-4">
            <input type="text" name="not" placeholder="Bir not bırak..." class="flex-1 bg-gray-800 rounded-xl px-4 py-2 outline-none border border-gray-700 focus:border-blue-500">
            <button class="bg-blue-600 px-5 rounded-xl font-bold hover:bg-blue-500">KAYDET</button>
        </form>

        <div class="space-y-2 max-h-40 overflow-y-auto pr-2 text-xs">
            <% data.logs.reverse().forEach(log => { %>
                <div class="bg-gray-800/40 p-2 rounded-lg flex justify-between border border-gray-800">
                    <span class="text-gray-300"><%= log.metin %></span>
                    <span class="text-gray-600"><%= log.zaman %></span>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>
